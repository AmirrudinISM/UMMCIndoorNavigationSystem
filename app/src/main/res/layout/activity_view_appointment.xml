<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="4sp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.unikl.indoornavigationsystemforummc.medicalappointment.CreateAppointment"
    android:layout_gravity="center">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20sp"
                android:text="Appointment Details"
                android:background="#EE44EE"
                android:textSize="20sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAppointmentID"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Appointment ID:"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tvAppointmentStatus"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Status: "
                    android:textSize="18sp"/>

            </LinearLayout>






            <TextView
                android:id="@+id/tvAppointmentDateAndTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Appointment Date &amp; Time:"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tvDoctorID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Doctor ID:"
                android:textSize="18sp"/>

           

            <TextView
                android:layout_marginVertical="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Patient Symptoms"
                android:background="#EE44EE"
                android:textSize="20sp"/>

            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Common Symptoms:"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tvCommonSymptoms"
                android:textStyle="italic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="---Common Symptoms:----"
                android:layout_marginVertical="6sp"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Other Symptoms: "
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tvOtherSymptoms"
                android:textStyle="italic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="--Other Symptoms: --"
                android:layout_marginVertical="6sp"
                android:textSize="18sp"/>

            <TextView
                android:layout_marginVertical="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Patient's Vitals"
                android:background="#EE44EE"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tvWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weight (kg): "
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tvBloodPressure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blood Pressure Systolic (mmHg): "
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tvTemperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Temperature (Â°C): "
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tvOxygenLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Oxygen Level (%): "
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tvDiagnosis"
                android:layout_marginVertical="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diagnosis:"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tvAdditionalNotes"
                android:layout_marginVertical="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Additional Notes:"
                android:textSize="20sp"/>



            <Button
                android:id="@+id/btnCancelAppointment"
                android:layout_marginVertical="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CANCEL APPOINTMENT" />

            <TextView
                android:id="@+id/tvBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginBottom="20sp"
                android:textColor="#0388fc"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>