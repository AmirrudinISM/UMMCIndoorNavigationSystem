<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.unikl.indoornavigationsystemforummc.main.MainMenu"
    android:orientation="vertical">

    <TextView
        android:id="@+id/statusDisplay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:background="#808080"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="20sp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <Button
            android:id="@+id/btnMedicalAppointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:height="150dp"
            android:drawableLeft="@drawable/iconsmedic96"
            android:text="Medical Appointment"
            android:textAllCaps="false"
            android:textSize="20sp"

            app:cornerRadius="6pt" />

        <Button
            android:id="@+id/btnIndoorMaps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:height="150dp"
            android:drawableLeft="@drawable/iconsnavigation96"
            android:text="Navigate"
            android:textAllCaps="false"
            android:textSize="20sp"
            app:cornerRadius="6pt"></Button>

        <Button
            android:id="@+id/btnProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:height="150dp"
            android:drawableLeft="@drawable/iconsprofile96"
            android:text="Profile"
            android:textAllCaps="false"
            android:textSize="20sp"
            app:cornerRadius="6pt"></Button>

    </LinearLayout>

    <Button
        android:id="@+id/btnLogout"
        style="@style/Widget.Material3.Button"
        android:paddingVertical="14dp"
        app:icon="@drawable/logout_24px"
        app:iconGravity="textStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textSize="20sp"
        android:layout_marginHorizontal="10sp"/>
</LinearLayout>