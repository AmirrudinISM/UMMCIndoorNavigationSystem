<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.unikl.indoornavigationsystemforummc.medicalappointment.ViewDoctorProfile">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/drProgressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Doctor Profile"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_marginVertical="20sp"
                />
            <!--INFO STARTS HERE-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="6sp"
                android:text="Name:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/lblName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="6sp"
                android:text="Name"
                android:textSize="22sp" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="6sp"
                android:text="Qualification:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/lblQualification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="6sp"
                android:text="Qualification"
                android:textSize="22sp" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Doctor ID:"
                android:textSize="16sp"
                android:layout_marginVertical="6sp"
                />

            <TextView
                android:id="@+id/lblDoctorID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="DoctorID"
                android:textSize="22sp"
                android:layout_marginVertical="6sp"
                />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Email:"
                android:textSize="16sp"
                android:layout_marginVertical="6sp"
                />

            <TextView
                android:id="@+id/lblDrEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Email"
                android:textSize="22sp"
                android:layout_marginVertical="6sp"
                />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Phone Number:"
                android:textSize="16sp"
                android:layout_marginVertical="6sp"
                />

            <TextView
                android:id="@+id/lblPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="PhoneNumber"
                android:textSize="22sp"
                android:layout_marginVertical="6sp"
                />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Location:"
                android:textSize="16sp"
                android:layout_marginVertical="6sp"
                />

            <TextView
                android:id="@+id/lblLocation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Location"
                android:textSize="22sp"
                android:layout_marginVertical="6sp"
                />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
</LinearLayout>