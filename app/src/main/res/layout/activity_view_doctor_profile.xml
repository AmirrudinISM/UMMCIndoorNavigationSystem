<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.unikl.indoornavigationsystemforummc.medicalappointment.ViewDoctorProfile">

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/drProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="16pt">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Doctor Profile"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_marginVertical="20sp"
                />
            <!--INFO STARTS HERE-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="6sp"
                android:text="Name:"
                android:textSize="16sp" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/lblName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="6sp"
                android:drawableLeft="@drawable/badge_40px"
                android:drawablePadding="4dp"
                android:text="Name"
                android:textSize="22sp" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="6sp"
                android:text="Qualification:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/lblQualification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="6sp"
                android:drawableLeft="@drawable/workspace_premium_40px"
                android:drawablePadding="4dp"
                android:text="Qualification"
                android:textSize="22sp" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Doctor ID:"
                android:textSize="16sp"
                android:layout_marginVertical="6sp"
                />

            <TextView
                android:id="@+id/lblDoctorID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/badge_40px"
                android:drawablePadding="4dp"
                android:text="DoctorID"
                android:textSize="22sp"
                android:layout_marginVertical="6sp"
                />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Email:"
                android:textSize="16sp"
                android:layout_marginVertical="6sp"
                />

            <TextView
                android:id="@+id/lblDrEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/mail_40px"
                android:drawablePadding="4dp"
                android:text="Email"
                android:textSize="22sp"
                android:layout_marginVertical="6sp"
                />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Phone Number:"
                android:textSize="16sp"
                android:layout_marginVertical="6sp"
                />

            <TextView
                android:id="@+id/lblPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/call_40px"
                android:drawablePadding="4dp"
                android:text="PhoneNumber"
                android:textSize="22sp"
                android:layout_marginVertical="6sp"
                />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Location:"
                android:textSize="16sp"
                android:layout_marginVertical="6sp"
                />

            <TextView
                android:id="@+id/lblLocation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/location_on_40px"
                android:drawablePadding="4dp"
                android:text="Location"
                android:textSize="22sp"
                android:layout_marginVertical="6sp"
                />
            <Button
                android:id="@+id/btnNavigate"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16sp"
                android:padding="14dp"
                android:text="Navigate"
                android:textSize="18sp"
                app:icon="@drawable/assistant_navigation_24px"
                app:iconGravity="textStart"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>




</LinearLayout>