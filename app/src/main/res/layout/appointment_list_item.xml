<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:divider="@null">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        android:layout_marginVertical="4pt">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4pt"
            android:padding="8pt"
            android:orientation="vertical">
            <TextView
                android:id="@+id/lblAppointmentID"
                android:text="AppointmentID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"></TextView>


            <TextView
                android:id="@+id/lblAppointmentDateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="16sp"
                android:text="Date &amp; Time:  "
                android:layout_marginVertical="4pt"></TextView>

            <TextView
                android:id="@+id/lblStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="16sp"
                android:text="Status: "
                android:layout_marginVertical="4pt"></TextView>
        </LinearLayout>


    </androidx.cardview.widget.CardView>



</LinearLayout>